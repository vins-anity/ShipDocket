# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/trail_db

# ============================================
# Supabase (for user authentication)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# OAuth Credentials
# ============================================
# Slack App Credentials
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# GitHub App Credentials
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Jira OAuth Credentials
JIRA_CLIENT_ID=your-jira-client-id
JIRA_CLIENT_SECRET=your-jira-client-secret

# ============================================
# Webhook Secrets  
# ============================================
SLACK_SIGNING_SECRET=your-slack-signing-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
JIRA_WEBHOOK_SECRET=your-jira-webhook-secret

# ============================================
# AI Configuration (OpenRouter)
# ============================================
# Get your free API key from: https://openrouter.ai/keys
# Model: google/gemini-3-flash-preview (free tier available)
# Sign up at https://openrouter.ai for $1 test credits
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# Encryption
# ============================================
# Generate using: bun --eval "import { generateEncryptionKey } from './apps/api/src/lib/token-encryption.ts'; console.log(generateEncryptionKey());"
ENCRYPTION_KEY=your-64-character-hex-string-here

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=development
